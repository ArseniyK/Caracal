<!-- Allowed languages, extend if necessary -->
<!ENTITY
	% def.lang "en|iw|sr-lat|sr-cyr|ru|es"
>

<!ELEMENT document (language*)>

<!ELEMENT language (constant*)>
<!ATTLIST language
	name CDATA #IMPLIED
	short (%def.lang;) #REQUIRED
	default (yes|no) "no"
	rtl (yes|no) "no"
>

<!ELEMENT constant ANY>
<!ATTLIST constant
	name CDATA #REQUIRED
	value CDATA #IMPLIED
>
