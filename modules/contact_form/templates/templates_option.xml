<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<cms:if condition="$params['selected'] == $params['text_id']">
		<option
			selected="selected"
			value="$params['text_id']"
			eval="value"
		>
			<cms:var name="$params['name'][$language]"/>
		</option>
	</cms:if>
	<cms:if condition="$params['selected'] != $params['text_id']">
		<option
			value="$params['text_id']"
			eval="value"
		>
			<cms:var name="$params['name'][$language]"/>
		</option>
	</cms:if>
</document>
