<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" cms:eval="action" method="POST">
		<div id="contact_form_settings_notebook">
			<div>
				<label cms:tooltip="tooltip_sender_name">
					<span><cms:text constant="label_name" module="contact_form"/></span>
					<input 
						type="text" 
						name="sender_name" 
						value="$settings['sender_name']" 
						cms:eval="value"
						style="width: 250px;"
					/>
				</label>
				<label cms:tooltip="tooltip_sender_address">
					<span><cms:text constant="label_address" module="contact_form"/></span>
					<input 
						type="text" 
						name="sender_address" 
						value="$settings['sender_address']" 
						cms:eval="value"
						style="width: 250px;"
						class="code"
					/>
				</label>
			</div>

			<div>
				<label cms:tooltip="tooltip_recipient_name">
					<span><cms:text constant="label_name" module="contact_form"/></span>
					<input 
						type="text" 
						name="recipient_name" 
						value="$settings['recipient_name']" 
						cms:eval="value"
						style="width: 250px;"
					/>
				</label>
				<label cms:tooltip="tooltip_recipient_address">
					<span><cms:text constant="label_address" module="contact_form"/></span>
					<input 
						type="text" 
						name="recipient_address" 
						value="$settings['recipient_address']" 
						cms:eval="value"
						style="width: 250px;"
						class="code"
					/>
				</label>
				<label>
					<span><cms:text constant="label_subject" module="contact_form"/></span>
					<input 
						type="text" 
						name="recipient_subject" 
						value="$settings['recipient_subject']" 
						cms:eval="value"
						style="width: 350px;"
					/>
				</label>
			</div>

			<div>
				<label class="checkbox">
					<span><cms:text constant="label_use_smtp" module="contact_form"/></span>
					<cms:if condition="$settings['use_smtp']">
						<input type="checkbox" name="use_smtp" checked="checked"/>
					</cms:if>
					<cms:if condition="!$settings['use_smtp']">
						<input type="checkbox" name="use_smtp"/>
					</cms:if>
				</label>
				<hr/>
				<label class="horizontal">
					<span><cms:text constant="label_server" module="contact_form"/></span>
					<input
						type="text"
						name="smtp_server"
						value="$settings['smtp_server']"
						cms:eval="value"
						style="width: 250px;"
						class="code"
					/>
				</label>
				<label class="horizontal">
					<span><cms:text constant="label_port" module="contact_form"/></span>
					<input
						type="text"
						name="smtp_port"
						value="$settings['smtp_port']"
						cms:eval="value"
						style="width: 50px;"
						class="code"
					/>
				</label>
				<label class="checkbox">
					<span><cms:text constant="label_use_ssl" module="contact_form"/></span>
					<cms:if condition="$settings['use_ssl']">
						<input type="checkbox" name="use_ssl" checked="checked"/>
					</cms:if>
					<cms:if condition="!$settings['use_ssl']">
						<input type="checkbox" name="use_ssl"/>
					</cms:if>
				</label>
				<hr/>
				<label class="radio">
					<span><cms:text constant="label_smtp_no_authentication" module="contact_form"/></span>
					<cms:if condition="$settings['smtp_authenticate'] == 0">
						<input type="radio" name="smtp_authenticate" value="0" checked="checked"/>
					</cms:if>
					<cms:if condition="$settings['smtp_authenticate'] == 1">
						<input type="radio" name="smtp_authenticate" value="0"/>
					</cms:if>
				</label>
				<label class="radio">
					<span><cms:text constant="label_smtp_authenticate" module="contact_form"/></span>
					<cms:if condition="$settings['smtp_authenticate'] == 1">
						<input type="radio" name="smtp_authenticate" value="1" checked="checked"/>
					</cms:if>
					<cms:if condition="$settings['smtp_authenticate'] == 0">
						<input type="radio" name="smtp_authenticate" value="1"/>
					</cms:if>
				</label>

				<label class="horizontal">
					<span><cms:text constant="label_smtp_username" module="contact_form"/></span>
					<input
						type="text"
						name="smtp_username"
						value="$settings['smtp_username']"
						cms:eval="value"
						style="width: 150px;"
						class="code"
					/>
				</label>
				<label class="horizontal">
					<span><cms:text constant="label_smtp_password" module="contact_form"/></span>
					<input
						type="text"
						name="smtp_password"
						value="$settings['smtp_password']"
						cms:eval="value"
						style="width: 150px;"
						class="code"
					/>
				</label>
				<div style="clear: both;"/>
			</div>

			<div>
				<label class="checkbox">
					<span><cms:text constant="label_save_copy" module="contact_form"/></span>
					<cms:if condition="$settings['save_copy']">
						<input type="checkbox" name="save_copy" checked="checked"/>
					</cms:if>
					<cms:if condition="!$settings['save_copy']">
						<input type="checkbox" name="save_copy"/>
					</cms:if>
				</label>
				<label>
					<span><cms:text constant="label_save_location" module="contact_form"/></span>
					<input
						type="text" 
						name="save_location"
						value="$settings['save_location']"
						cms:eval="value"
						class="code"
						style="width: 350px;"
					/>
				</label>
			</div>
		</div>

		<div class="button_bar">
			<button type="submit"><cms:text constant="save"/></button>
			<button type="reset"><cms:text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" cms:eval="onclick">
				<cms:text constant="cancel"/>
			</button>
		</div>
	</form>
	<script type="text/javascript">
		var notebook = new Notebook('contact_form_settings_notebook');
		notebook
			.setPageTitle(0, language_handler.getText('contact_form', 'tab_sender'))
			.setPageTitle(1, language_handler.getText('contact_form', 'tab_recipient'))
			.setPageTitle(2, language_handler.getText('contact_form', 'tab_smtp'))
			.setPageTitle(3, language_handler.getText('contact_form', 'tab_backup'));
	</script>
</document>
