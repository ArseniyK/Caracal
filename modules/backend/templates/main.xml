<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<cms:var name="_HTML_401"/>
	<html>
		<head>
			<title>
				<cms:text constant="site_title" />
				<cms:raw text=" - "/>
				<cms:text constant="title" module="backend"/>
			</title>
			<cms:module
				name="head_tag"
				action="print_tag"
			/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" eval="class">
			<div id="wrap">
				<div id="main_menu">
					<cms:if condition="isset($_SESSION['logged']) and $_SESSION['logged']">
						<_main_menu/>
					</cms:if>

					<ol id="language_menu">
						<cms:module name="language_menu" action="print" from_module="backend"/>
					</ol>
				</div>

				<cms:if condition="!isset($_SESSION['logged']) or !$_SESSION['logged']">
					<div id="login_window" class="window">
						<div class="title"><cms:text constant="title_login" module="backend"/></div>
						<div class="content">
							<cms:module name="backend" action="login"/>
						</div>
					</div>
					<script type="text/javascript">
						$(document).ready(function() {
							window_system.attachToStructure('login_window', 350, false);
						});
					</script>
				</cms:if>
			</div>

			<div id="copyright">
				<cms:text constant="backend_copyright"/>
			</div>
		</body>
	</html>
</document>
