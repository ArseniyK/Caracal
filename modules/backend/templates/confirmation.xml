<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<div style="margin-bottom: 10px;">
		<_var name="$params['message']"/>

		<_if condition="!empty($param['name'])">
			<div style="padding: 10px; font-weight: bold;">
				<_var name="$params['name']"/>
			</div>
		</_if>
	</div>
	<div class="button_bar">
		<button type="button" onclick="$params['yes_action']" eval="onclick">
			<_var name="$params['yes_text']"/>
		</button>
		<button type="button" onclick="$params['no_action']" eval="onclick">
			<_var name="$params['no_text']"/>
		</button>
	</div>
</document>
