<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<_text constant="message_password_change" module="backend"/>
	<form action="$params['form_action']" eval="action" method="POST" id="change_password_form">
		<div style="padding: 10px;">
			<label>
				<span><_text constant="label_old_password" module="backend"/></span>
				<input type="password" name="old_password" style="width: 270px;"/>
			</label>
			<hr/>
			<label>
				<span><_text constant="label_new_password" module="backend"/></span>
				<input type="password" name="new_password" style="width: 270px;"/>
			</label>
			<label>
				<span><_text constant="label_repeat_password" module="backend"/></span>
				<input type="password" name="repeat_password" style="width: 270px;"/>
			</label>
		</div>
		<div class="button_bar">
			<button type="submit"><_text constant="change"/></button>
			<button type="button" onclick="$params['cancel_action']" eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
</document>
