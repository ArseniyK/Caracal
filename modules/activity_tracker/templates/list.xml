<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<!-- Window Menu -->
	<div class="main_menu">
		<cms:var name="$params['link_new']"/>
	</div>

	<!-- Header -->
	<div class="scrollable_list">
		<div class="list_header">
			<span class="column" style="width: 200px;">
				<cms:text constant="column_activity" module="activity_tracker"/>
			</span>
			<span class="column" style="width: 200px;">
				<cms:text constant="column_function" module="activity_tracker"/>
			</span>
			<span class="column" style="width: 130px; text-align: center">
				<cms:text constant="column_ignore_address" module="activity_tracker"/>
			</span>
			<span class="column">
				<cms:text constant="column_options"/>
			</span>
		</div>
		<div class="list_content" style="height: 250px">
			<!-- List Content -->
			<cms:list/>
		</div>
	</div>
</document>
