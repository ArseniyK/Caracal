<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" cms:eval="action" method="POST" id="group_change_form">
		<label>
			<input type="hidden" name="id" value="$params['id']" cms:eval="value"/>
			<span><_text constant="label_text_id" module="youtube"/></span>
			<input
				type="text"
				name="text_id"
				class="code"
				style="width: 200px;"
				maxlength="32"
				value="$params['text_id']"
				cms:eval="value"
			/>
		</label>
		<label>
			<span><_text constant="label_name" module="youtube"/></span>
			<input type="text" name="name" class="multi-language" style="width: 375px;"/>
			<_language_data param="name"/>
		</label>
		<label>
			<span><_text constant="label_description" module="youtube"/></span>
			<textarea
				name="description"
				class="multi-language"
				rows="4"
				cols="50"
				style="width: 375px; height: 130px;"
			/>
			<_language_data param="description"/>
		</label>
		<label class="checkbox">
			<span><_text constant="label_visible" module="youtube"/></span>
			<_if condition="$params['visible'] == 1">
				<input type="checkbox" name="visible" checked="checked"/>
			</_if>
			<_if condition="$params['visible'] == 0">
				<input type="checkbox" name="visible"/>
			</_if>
		</label>
		<div class="button_bar">
			<button type="submit"><_text constant="save"/></button>
			<button type="reset"><_text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" cms:eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
	<script type="text/javascript">
		new LanguageSelector('group_change_form');
	</script>
</document>
