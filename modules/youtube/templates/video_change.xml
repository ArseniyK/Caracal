<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" eval="action" method="POST" id="video_change_form">
		<input type="hidden" name="id" value="$params['id']" eval="value"/>
		<label>
			<span><_text constant="label_text_id" module="youtube"/></span>
			<input type="text" name="text_id" style="width: 100px;" maxlength="32" value="$params['text_id']" eval="value"/>
		</label>
		<label>
			<span><_text constant="label_id" module="youtube"/></span>
			<input type="text" name="video_id" style="width: 100px;" maxlength="11" value="$params['video_id']" eval="value"/>
		</label>
		<label>
			<span><_text constant="label_title" module="youtube"/></span>
			<input type="text" name="title" class="multi-language" style="width: 330px;" maxlength="255"/>
			<_language_data param="title"/>
		</label>
		<div class="button_bar">
			<button type="submit"><_text constant="save"/></button>
			<button type="reset"><_text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
	<script type="text/javascript">
		new LanguageSelector('video_change_form');
	</script>
</document>
