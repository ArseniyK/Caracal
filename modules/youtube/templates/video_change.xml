<?xml version="1.0" encoding="UTF-8"?>
<document>
	<form action="$params['form_action']" eval="action" method="POST">
		<input type="hidden" name="id" value="$params['id']" eval="value"/>
		<label>
			<span><_text constant="label_id" module="youtube"/></span>
			<input type="text" name="video_id" style="width: 100px;" maxlength="11" value="$params['video_id']" eval="value"/>
		</label>
		<label>
			<span><_text constant="label_title" module="youtube"/></span>
			<input type="text" name="title" style="width: 330px;" maxlength="255" value="$params['title']" eval="value"/>
		</label>
		<div class="button_bar">
			<button type="submit"><_text constant="save"/></button>
			<button type="reset"><_text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
</document>