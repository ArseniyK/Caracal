<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" eval="action" method="POST">
		<input type="hidden" name="id" value="$params['id']" eval="value"/>
		<label>
			<span><_text constant="label_answer_question" module="kabalah"/></span>
			<select name="question" style="width: 270px;">
				<_kabalah_questions template="questions_select.xml" selected="$params['question']" eval="selected"/>
			</select>
		</label>
		<label>
			<span><_text constant="label_answer_number" module="kabalah"/></span>
			<input type="text" name="number" value="$params['answer']" eval="value" style="width: 90px;"/>
		</label>
		<label>
			<span><_text constant="label_answer_title" module="kabalah"/></span>
			<input type="text" name="title" value="$params['title']" eval="value" style="width: 270px;"/>
		</label>
		<label>
			<span><_text constant="label_question_short_description" module="kabalah"/></span>
			<textarea name="short_description" style="width: 360px; height: 50px;">
				<_var name="$params['short_description']"/>
			</textarea>
		</label>
		<label>
			<span><_text constant="label_question_description" module="kabalah"/></span>
			<textarea name="description" style="width: 360px; height: 100px;">
				<_var name="$params['description']"/>
			</textarea>
		</label>
		<div class="button_bar">
			<button type="submit"><_text constant="save" module="kabalah"/></button>
			<button type="reset"><_text constant="reset" module="kabalah"/></button>
			<button type="button" onclick="$params['cancel_action']" eval="onclick">
				<_text constant="cancel" module="kabalah"/>
			</button>
		</div>
	</form>
</document>
