<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" eval="action" method="POST">
		<label>
			<span><_text constant="label_question_id" module="kabalah"/></span>
			<input type="text" name="pid" style="width: 70px;"/>
		</label>
		<label>
			<span><_text constant="label_question_title" module="kabalah"/></span>
			<input type="text" name="title" style="width: 270px;"/>
		</label>
		<label>
			<span><_text constant="label_question_description" module="kabalah"/></span>
			<textarea name="description" style="width: 360px; height: 100px;"><_raw/></textarea>
		</label>
		<label>
			<span><_text constant="label_question_formula" module="kabalah"/></span>
			<textarea class="code" name="formula" style="width: 360px; height: 150px;"><_raw/></textarea>
		</label>
		<div class="button_bar">
			<button type="submit"><_text constant="save" module="kabalah"/></button>
			<button type="reset"><_text constant="reset" module="kabalah"/></button>
			<button type="button" onclick="$params['cancel_action']" eval="onclick">
				<_text constant="cancel" module="kabalah"/>
			</button>
		</div>
	</form>
</document>
