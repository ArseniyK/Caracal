		<div style="margin-bottom: 10px;">
			<_text constant="message_field_delete" module="kabalah"/>
			<div style="padding: 10px; font-weight: bold;">
				<_var name="$params['title']"/>
			</div>
		</div>
		<div class="button_bar">
			<button type="button" onclick="$params['yes_action']" eval="onclick">
				<_text constant="delete" module="kabalah"/>
			</button>
			<button type="button" onclick="$params['no_action']" eval="onclick">
				<_text constant="cancel" module="kabalah"/>
			</button>
		</div>
</document>
