<?xml version="1.0" encoding="UTF-8"?>
<document>
	<div class="main_menu">
		<_var name="$params['link_new']"/>
	</div>

	<div class="scrollable_list">
		<div class="list_header">
			<span class="column" style="width: 200px;">
				<_text constant="column_field_name" module="kabalah"/>
			</span>
			<span class="column" style="width: 60px">
				<_text constant="column_field_type" module="kabalah"/>
			</span>
			<span class="column">
				<_text constant="column_options" module="kabalah"/>
			</span>
		</div>
		<div class="list_content" style="height: 250px">
			<_kabalah_fields/>
		</div>
	</div>

	<div class="button_bar">
		<button type="button" onclick="$params['close_action']" eval="onclick">
			<_text constant="close" module="kabalah"/>
		</button>
	</div>
</document>
