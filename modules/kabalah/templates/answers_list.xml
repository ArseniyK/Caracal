<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<div class="main_menu">
		<_var name="$params['link_new']"/>
	</div>

	<div class="scrollable_list">
		<div class="list_header">
			<span class="column" style="width: 50px; text-align: center;">
				<_text constant="column_answer_number" module="kabalah"/>
			</span>
			<span class="column" style="width: 50px; text-align: center;">
				<_text constant="column_answer_question" module="kabalah"/>
			</span>
			<span class="column" style="width: 340px;">
				<_text constant="column_answer_answer" module="kabalah"/>
			</span>
			<span class="column">
				<_text constant="column_options" module="kabalah"/>
			</span>
		</div>
		<div class="list_content" style="height: 300px;">
			<_kabalah_answers/>
		</div>
	</div>
</document>
