<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" cms:eval="action" method="POST" id="user_page_edit_form">
		<label>
			<input type="hidden" name="id" value="$params['id']" cms:eval="value"/>
			<span><cms:text constant="label_title" module="user_page"/></span>
			<input type="text" class="multi-language" name="title" style="width: 690px;" maxlength="255"/>
			<cms:language_data param="title"/>
		</label>

		<label>
			<span><cms:text constant="label_content" module="user_page"/></span>
			<textarea
				class="multi-language"
				name="content"
				rows="5" cols="40"
				style="width: 690px; height: 250px;"
			/>
			<cms:language_data param="content"/>
		</label>

		<cms:if condition="$_SESSION['level'] >= 5">
			<label>
				<span><cms:text constant="label_owner" module="user_page"/></span>
				<select name="owner" style="width: 270px;">
					<_user_list selected="$params['owner']" template="users_option.xml" local="1" cms:eval="selected"/>
				</select>
			</label>
			<label class="checkbox">
				<span><cms:text constant="label_editable" module="user_page"/></span>
				<input
					type="checkbox"
					name="editable"
					checked="$params['editable'] ? 'checked' : false"
					cms:optional="checked"
					/>
			</label>
		</cms:if>

		<label class="checkbox">
			<span><cms:text constant="label_visible" module="user_page"/></span>
			<input
				type="checkbox"
				name="visible"
				checked="$params['visible'] ? 'checked' : false"
				cms:optional="checked"
				/>
		</label>

		<div class="button_bar">
			<button type="submit"><cms:text constant="save"/></button>
			<button type="reset"><cms:text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" cms:eval="onclick">
				<cms:text constant="cancel"/>
			</button>
		</div>
	</form>
	<script type="text/javascript">
		new LanguageSelector('user_page_edit_form');

		// create toolbar
		toolbar_api
				.createToolbar('user_page_edit_form', '[name=content]:input')
				.addControl('common', 'markdown')
				.addControl('gallery', 'article_image')
				.addControl('downloads', 'link');
	</script>
</document>
