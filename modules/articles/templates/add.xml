<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" eval="action" method="POST" id="article_add_form">
		<label>
			<span><_text constant="label_text_id" module="articles"/></span>
			<input type="text" name="text_id" class="code" style="width: 270px;" maxlength="32"/>
		</label>
		<label>
			<span><_text constant="label_group" module="articles"/></span>
			<select name="group" style="width: 270px;">
				<option></option>
				<_group_list template="group_option.xml" local="1"/>
			</select>
		</label>
		<label>
			<span><_text constant="label_title" module="articles"/></span>
			<input type="text" class="multi-language" name="title" style="width: 690px;" maxlength="255"/>
		</label>
		<label>
			<span><_text constant="label_content" module="articles"/></span>
			<textarea class="multi-language" name="content" rows="5" cols="40" style="width: 690px; height: 250px;"><_raw text=""/></textarea>
		</label>
		<label class="checkbox">
			<span><_text constant="label_visible" module="articles"/></span>
			<input type="checkbox" name="visible" checked="checked"/>
		</label>
		<div class="button_bar">
			<button type="submit"><_text constant="save"/></button>
			<button type="reset"><_text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
	<script type="text/javascript">
		new LanguageSelector('article_add_form');

		// create toolbar
		toolbar_api
				.createToolbar('article_add_form', '[name=content]:input')
				.addControl('common', 'markdown')
				.addControl('gallery', 'article_image')
				.addControl('downloads', 'link');
	</script>
</document>
