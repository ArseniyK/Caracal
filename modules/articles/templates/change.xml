<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" eval="action" method="POST" id="article_change_form">
		<label>
			<input type="hidden" name="id" value="$params['id']" eval="value"/>
			<span><_text constant="label_text_id" module="articles"/></span>
			<input type="text" name="text_id" value="$params['text_id']" eval="value" style="width: 270px;" maxlength="32"/>
		</label>
		<label>
			<span><_text constant="label_group" module="articles"/></span>
			<select name="group" style="width: 270px;">
				<option></option>
				<_group_list template="group_option.xml" local="1" selected="$params['group']" eval="selected"/>
			</select>
		</label>
		<label>
			<span><_text constant="label_title" module="articles"/></span>
			<input type="text" class="multi-language" name="title" style="width: 690px;" maxlength="255"/>
			<_language_data param="title"/>
		</label>
		<label>
			<span><_text constant="label_content" module="articles"/></span>
			<textarea class="multi-language" name="content" rows="5" cols="40" style="width: 690px; height: 300px;"><_raw text=""/></textarea>
			<_language_data param="content"/>
		</label>
		<label class="checkbox">
			<span><_text constant="label_visible" module="articles"/></span>
			<_if condition="$params['visible'] == 1">
				<input type="checkbox" name="visible" checked="checked"/>
			</_if>
			<_if condition="$params['visible'] == 0">
				<input type="checkbox" name="visible"/>
			</_if>
		</label>
		<div class="button_bar">
			<button type="submit"><_text constant="save"/></button>
			<button type="reset"><_text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
	<script type="text/javascript">
		new LanguageSelector('article_change_form');
	</script>

</document>
