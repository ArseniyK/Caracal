<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<div class="list_item">
		<span class="column" style="width: 340px;">
			<label style="vertical-align: middle;">
				<_if condition="$params['in_group'] == 1">
					<input type="checkbox" name="'news_id_'.$params['id']" cms:eval="name" value="1" checked="checked"/>
				</_if>
				<_if condition="$params['in_group'] == 0">
					<input type="checkbox" name="'news_id_'.$params['id']" cms:eval="name" value="1"/>
				</_if>
				<_var name="$params['title'][$language]"/>
			</label>
		</span>
	</div>
</document>
