<document>
	<_var name="_HTML_401"/>
	<html>
		<head>
			<title><_text constant="site_title" /><_raw text=" - "/><_text constant="title" module="backend" /></title>
			<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
			<meta name="keywords" content=""/>
			<meta name="robot" content="all"/>
			<meta name="robots" content="noarchive, nofollow, noindex"/>
			<meta name="GOOGLEBOT" content="noarchive, nofollow, noindex"/>
			<meta name="classification" content="GENERAL"/>
			<meta name="revisit-after" content="1 day"/>
			<meta name="distribution" content="GLOBAL"/>
			<meta name="rating" content="GENERAL"/>
			<meta name="copyright" content="RCF Group"/>
			<link rel="stylesheet" type="text/css" href="modules/backend/include/backend.css"/>
			<link rel="stylesheet" type="text/css" href="modules/session/include/login.css"/>
		</head>

		<body>
			<div id="wrap">
				<div id="login_window">
					<form method="post" id="login_form" action="$_SERVER['PHP_SELF']" eval="action">
						<div>
							<input type="hidden" name="section" value="session" class="hidden"/>
							<input type="hidden" name="action" value="login_perform" class="hidden"/>

							<span class="label username"><_text constant="username" module="session"/></span>
							<input type="text" name="username" maxlength="50" class="username"/>
						</div>

						<div>
							<span class="label password"><_text constant="password" module="session"/></span>
							<input type="password" name="password" maxlength="50" class="password"/>
						</div>

						<div>
							<span class="label captcha"><_text constant="captcha" module="session"/></span>
							<input type="text" name="captcha" class="captcha"/>
							<div class="captcha">
								<_module name="captcha" action="print_image_tag"/>
							</div>
						</div>

						<div>
							<button type="submit"><_text constant="login" module="session"/></button>
						</div>
					</form>
				</div>
			</div>
			<div id="copyright">
				<_text constant="copyright"/>
			</div>
		</body>
	</html>
</document>
