<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" eval="action" method="POST">
		<label>
			<span><_text constant="label_name" module="links"/></span>
			<input type="text" name="name" style="width: 360px;" maxlength="50"/>
		</label>
		<label>
			<span><_text constant="label_text_id" module="links"/></span>
			<input 
				type="text"
				name="text_id"
				style="width: 360px;"
				maxlength="32"
				class="code"
			/>
		</label>
		<div class="button_bar">
			<button type="submit"><_text constant="save"/></button>
			<button type="reset"><_text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
</document>
