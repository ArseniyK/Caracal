<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" eval="action" method="POST" id="downloads_upload_form" enctype="multipart/form-data">
		<label>
			<span><_text constant="label_name" module="downloads"/></span>
			<input type="text" name="name" class="multi-language" style="width: 270px;" maxlength="100"/>
		</label>
		<label>
			<span><_text constant="label_description" module="downloads"/></span>
			<textarea
				name="description"
				class="multi-language"
				style="width: 360px; height: 100px;"
			><_raw text=""/></textarea>
		</label>
		<label>
			<span><_text constant="label_file" module="downloads"/></span>
			<input type="hidden" name="MAX_FILE_SIZE" value="2000000000" />
			<input type="file" name="file"/>
		</label>
		<label class="checkbox">
			<span><_text constant="label_visible" module="downloads"/></span>
			<input type="checkbox" name="visible" checked="checked"/>
		</label>
		<div class="button_bar">
			<button type="submit"><_text constant="save"/></button>
			<button type="reset"><_text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
	<script type="text/javascript">
		new LanguageSelector('downloads_upload_form');
	</script>
</document>
