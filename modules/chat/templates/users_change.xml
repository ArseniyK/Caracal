<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" cms:eval="action" method="POST">
		<label>
			<input type="hidden" name="id" value="$params['id']" cms:eval="value"/>
			<span><cms:text constant="label_username" module="chat"/></span>
			<input
				type="text"
				name="username"
				value="$params['username']"
				style="width: 270px;"
				maxlength="45"
				cms:eval="value"
				/>
		</label>
		<label>
			<span><cms:text constant="label_display_name" module="chat"/></span>
			<input
				type="text"
				name="display_name"
				value="$params['display_name']"
				style="width: 270px;"
				maxlength="45"
				cms:eval="value"
				/>
		</label>
		<label>
			<span><cms:text constant="label_change_password" module="chat"/></span>
			<input type="text" name="password" style="width: 270px;" maxlength="45"/>
		</label>
		<label class="checkbox">
			<span><cms:text constant="label_temp" module="chat"/></span>
			<input
				type="checkbox"
				name="temp"
				checked="$params['temp'] ? 'checked' : false"
				cms:optional="checked"
				/>
		</label>
		<div class="button_bar">
			<button type="submit"><cms:text constant="save"/></button>
			<button type="reset"><cms:text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" cms:eval="onclick">
				<cms:text constant="cancel"/>
			</button>
		</div>
	</form>
</document>
