<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<!-- Window Menu -->
	<div class="main_menu">
		<_var name="$params['link_new']"/>
	</div>

	<!-- Header -->
	<div class="scrollable_list">
		<div class="list_header">
			<span class="column" style="width: 150px;">
				<_text constant="column_channel" module="chat"/>
			</span>
			<span class="column" style="width: 90px; text-align: center;">
				<_text constant="column_users" module="chat"/>
			</span>
			<span class="column">
				<_text constant="column_options"/>
			</span>
		</div>
		<div class="list_content" style="height: 250px">
			<!-- List Content -->
			<_channel_list/>
		</div>
	</div>
</document>
