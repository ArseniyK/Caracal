<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" cms:eval="action" method="POST" id="chat_room_add_form">
		<label>
			<input type="hidden" name="id" value="$params['id']" cms:eval="value"/>
			<span><_text constant="label_text_id" module="chat"/></span>
			<input type="text" name="text_id" value="$params['text_id']" cms:eval="value" style="width: 270px;" maxlength="45"/>
		</label>
		<label>
			<span><_text constant="label_room_name" module="chat"/></span>
			<input type="text" name="name" class="multi-language" style="width: 270px;" maxlength="45"/>
			<_language_data param="name"/>
		</label>
		<label>
			<span><_text constant="label_description" module="chat"/></span>
			<textarea name="description" class="multi-language" style="width: 360px; height: 100px;"/>
			<_language_data param="description"/>
		</label>
		<label>
			<span><_text constant="label_limit" module="chat"/></span>
			<input type="text" name="limit" value="$params['limit']" cms:eval="value" style="width: 70px;" maxlength="5"/>
		</label>
		<label>
			<span><_text constant="label_room_password" module="chat"/></span>
			<input type="text" name="password" value="$params['password']" cms:eval="value" style="width: 120px;"/>
		</label>
		<div class="button_bar">
			<button type="submit"><_text constant="save"/></button>
			<button type="reset"><_text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" cms:eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
	<script type="text/javascript">
		new LanguageSelector('chat_room_add_form');
	</script>
</document>
