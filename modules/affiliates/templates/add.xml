<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" cms:eval="action" method="POST">
		<label>
			<span><_text constant="label_user" module="affiliates"/></span>
			<select name="user" style="width: 270px;">
				<_user_list
					template="users_option.xml"
					local="1"
				/>
			</select>
		</label>
		<label>
			<span><_text constant="label_name" module="affiliates"/></span>
			<input type="text" name="name" style="width: 270px;" maxlength="50"/>
		</label>
		<label>
			<span><_text constant="label_uid" module="affiliates"/></span>
			<input type="text" name="uid" style="width: 200px;" maxlength="30" value="$params['uid']" cms:eval="value"/>
		</label>
		<label class="checkbox">
			<span><_text constant="label_active" module="affiliates"/></span>
			<input type="checkbox" name="active" checked="checked"/>
		</label>
		<div class="button_bar">
			<button type="submit"><_text constant="save"/></button>
			<button type="reset"><_text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" cms:eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
</document>
