<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" eval="action" method="POST" id="tips_change_form">
		<label>
			<input type="hidden" name="id" value="$params['id']" eval="value"/>
			<span><_text constant="label_content" module="tips"/></span>
			<textarea name="content" class="multi-language" style="width: 370px; height: 100px;"/>
			<_language_data param="content"/>
		</label>
		<label class="checkbox">
			<span><_text constant="label_visible" module="tips"/></span>
			<_if condition="$params['visible'] == 1">
				<input type="checkbox" name="visible" checked="checked"/>
			</_if>
			<_if condition="$params['visible'] != 1">
				<input type="checkbox" name="visible"/>
			</_if>
		</label>
		<div class="button_bar">
			<button type="submit"><_text constant="save"/></button>
			<button type="reset"><_text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
	<script type="text/javascript">
		new LanguageSelector('tips_change_form');
	</script>
</document>
