<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<!-- Window Menu -->
	<div class="main_menu">
		<_var name="$params['link_new']"/>

		<div class="floated">
			<_text constant="type" module="survey"/>
			<select onchange="javascript: survey_update_result_list();" id="survey_type_list">
				<_group_list
					selected="isset($_REQUEST['group']) ? fix_chars($_REQUEST['group']) : 0"
					template="groups_option.xml"
					local="1"
					eval="selected"
				/>
			</select>
		</div>
		<div style="clear: both;"/>
	</div>

	<!-- Header -->
	<div class="scrollable_list">
		<div class="list_header">
			<span class="column" style="width: 150px;">
				<!-- Column 1 -->
			</span>
			<span class="column" style="width: 90px; text-align: center;">
				<!-- Column 2 -->
			</span>
			<span class="column">
				<_text constant="column_options"/>
			</span>
		</div>
		<div class="list_content" style="height: 250px">
			<!-- List Content -->
			<_list/>
		</div>
	</div>
</document>
