<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<!-- Window Menu -->
	<div class="main_menu">
		<div class="floated">
			<_text constant="type" module="survey"/>
			<select onchange="javascript: survey_update_result_list();" id="survey_type_list">
				<option/>
				<_types_list
					selected="isset($_REQUEST['type']) ? fix_chars($_REQUEST['type']) : 0"
					template="types_option.xml"
					local="1"
					cms:eval="selected"
				/>
			</select>
		</div>
		<_if condition="isset($_REQUEST['type']) &amp;&amp; !empty($_REQUEST['type'])">
			<a 
				href="url_Make('transfer_control', 'backend_module', array('module', 'survey'), array('backend_action', 'export_data'), array('type', fix_chars($_REQUEST['type'])))"
				cms:eval="href"
			>
				<_text constant="menu_export" module="survey"/>
			</a>
		</_if>
		<div style="clear: both;"/>
	</div>

	<!-- Header -->
	<div class="scrollable_list">
		<div class="list_header">
			<!--
			<span class="column" style="width: 50px;">
				<input type="checkbox"/>
			</span>
			-->
			<_columns_list
				type="isset($_REQUEST['type']) ? $_REQUEST['type'] : -1"
				cms:eval="type"
			/>
		</div>
		<div class="list_content" style="height: 250px">
			<_if condition="isset($_REQUEST['type']) &amp;&amp; !empty($_REQUEST['type'])">
				<_results_list
					type="$_REQUEST['type']"
					cms:eval="type"
				/>
			</_if>
		</div>
	</div>
</document>
