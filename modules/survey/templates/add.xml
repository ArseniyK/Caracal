<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" eval="action" method="POST">
		<label>
			<span><_text constant="label_name" module="survey"/></span>
			<input type="text" class="code" name="name" style="width: 270px;" maxlength="30"/>
		</label>
		<label>
			<span><_text constant="label_fields" module="survey"/></span>
			<textarea name="fields" class="code" style="width: 320px; height: 100px;" maxlength="255"/>
		</label>
		<label class="checkbox">
			<span><_text constant="label_unique_address" module="survey"/></span>
			<input type="checkbox" name="unique_address"/>
		</label>
		<label class="checkbox">
			<span><_text constant="label_send_email" module="survey"/></span>
			<input type="checkbox" name="send_email"/>
		</label>
		<div class="button_bar">
			<button type="submit"><_text constant="save"/></button>
			<button type="button" onclick="$params['cancel_action']" eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
</document>
