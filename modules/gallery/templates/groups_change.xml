<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" eval="action" method="POST" id="group_change_form">
		<input type="hidden" name="id" value="$params['id']" eval="value"/>
		<label>
			<span><_text constant="label_text_id" module="gallery"/></span>
			<input
				type="text"
				name="text_id"
				value="$params['text_id']"
				style="width: 360px;"
				maxlength="50"
				eval="value"
				class="code"
			/>
		</label>
		<label>
			<span><_text constant="label_name" module="gallery"/></span>
			<input
				type="text"
				name="name"
				class="multi-language"
				style="width: 360px;"
				maxlength="50"
			/>
			<_language_data param="name"/>
		</label>
		<label>
			<span><_text constant="label_description" module="gallery"/></span>
			<textarea
				name="description"
				class="multi-language"
				style="width: 360px; height: 150px;"
			>
				<_raw text=""/>
			</textarea>
			<_language_data param="description"/>
		</label>
		<label>
			<span><_text constant="label_thumbnail" module="gallery"/></span>
			<select name="thumbnail">
				<option/>
				<_image_list
					selected="$params['thumbnail']"
					group_id="$params['id']"
					template="thumbnail_change_item.xml"
					local="1"
					show_invisible="1"
					eval="selected,group_id"
				/>
			</select>
		</label>
		<div class="button_bar">
			<button type="submit"><_text constant="save"/></button>
			<button type="reset"><_text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
	<script type="text/javascript">
		new LanguageSelector('group_change_form');
	</script>
</document>
