<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form id="image_upload_form" action="$params['form_action']" eval="action" method="POST" enctype="multipart/form-data">
		<label>
			<span><_text constant="label_title" module="gallery"/></span>
			<input type="text" name="title" class="multi-language" style="width: 270px;" maxlength="255"/>
		</label>
		<label>
			<span><_text constant="label_group" module="gallery"/></span>
			<select name="group" style="width: 270px;">
				<option></option>
				<_group_list template="groups_option.xml" local="1"/>
			</select>
		</label>
		<label>
			<span><_text constant="label_file" module="gallery"/></span>
			<input type="hidden" name="MAX_FILE_SIZE" value="3000000" />
			<input type="file" name="image"/>
		</label>
		<label>
			<span><_text constant="label_description" module="gallery"/></span>
			<textarea name="description" class="multi-language" style="width: 360px; height: 150px;"><_raw text=""/></textarea>
		</label>
		<label class="checkbox">
			<span><_text constant="label_visible" module="gallery"/></span>
			<input type="checkbox" name="visible" checked="checked"/>
		</label>
		<label class="checkbox">
			<span><_text constant="label_slideshow" module="gallery"/></span>
			<input type="checkbox" name="slideshow"/>
		</label>
		<div class="button_bar">
			<button type="submit"><_text constant="upload"/></button>
			<button type="button" onclick="$params['cancel_action']" eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
	<script type="text/javascript">
		new LanguageSelector('image_upload_form');
	</script>
</document>
