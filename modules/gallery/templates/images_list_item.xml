<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<div class="list_item">

		<div class="options">
			<_var name="$params['item_change']"/>
			<_var name="$params['item_delete']"/>
		</div>

		<div class="image_holder">
			<img
				src="gallery::getThumbnailById($params['id'], null, 100)"
				alt="$params['title'][$language]"
				cms:eval="src,alt"
				/>
		</div>

		<span class="title">
			<_var name="$params['title'][$language]"/>
		</span>
	</div>
</document>
