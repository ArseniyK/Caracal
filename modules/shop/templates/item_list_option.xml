<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<div class="list_item">
		<span class="column" style="width: 250px;">
			<input type="hidden" name="'related_'.$params['id']" cms:eval="name" value="1"/>
			<cms:var name="$params['name'][$language]"/>
		</span>
		<span class="column" style="width: 60px;">
			<cms:var name="$params['price']"/>
		</span>
		<span class="column" style="width: 50px;">
			<cms:var name="$params['rating']"/>
		</span>
		<span class="column">
			<a href="javascript: void(0);" onclick="javascript: Caracal.Shop.remove_related_item(this);">
				<cms:text constant="delete"/>
			</a>
		</span>
	</div>
</document>
