<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" cms:eval="action" method="POST" id="shop_item_add_form">
		<label>
			<span><_text constant="label_name" module="shop"/></span>
			<input type="text" name="name" style="width: 340px;" maxlength="25"/>
		</label>

		<div class="button_bar">
			<button type="submit"><_text constant="save"/></button>
			<button type="reset"><_text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" cms:eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
</document>
