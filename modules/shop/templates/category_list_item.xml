<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<div class="list_item">
		<span class="column" style="'width: '.(300-($params['level'] * 15)).'px;'" eval="style">
			<_var name="$params['title'][$language]"/>
		</span>
		<span class="column">
			<_var name="$params['item_change']"/><_raw text=" "/>
			<_var name="$params['item_delete']"/><_raw text=" "/>
			<_var name="$params['item_add']"/>
		</span>
	</div>
	<div style="padding-left: 15px;">
		<_children
			parent="$params['id']"
			level="$params['level'] + 1"
			eval="parent,level"
		/>
	</div>
</document>
