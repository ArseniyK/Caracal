<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<tr>
		<td>
			<_var name="$params['name'][$language]"/>
			<_if condition="!empty($params['description'])">
				<small><_var name="$params['description']"/></small>
			</_if>
		</td>
		<td><_var name="$params['count']"/></td>
		<td><_var name="$params['price']"/></td>
		<td><_var name="$params['tax']"/></td>
		<td><_var name="$params['weight']"/></td>
		<td><_var name="$params['total']"/></td>
	</tr>
</document>
