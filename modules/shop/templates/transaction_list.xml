<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<!-- Header -->
	<div class="scrollable_list">
		<div class="list_header">
			<span class="column" style="width: 160px;">
				<_text constant="column_uid" module="shop"/>
			</span>
			<span class="column" style="width: 190px;">
				<_text constant="column_name" module="shop"/>
			</span>
			<span class="column" style="width: 100px;">
				<_text constant="column_total" module="shop"/>
			</span>
			<span class="column">
				<_text constant="column_options"/>
			</span>
		</div>
		<div class="list_content" style="height: 250px">
			<_transaction_list/>
		</div>
	</div>
</document>
