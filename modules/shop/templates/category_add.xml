<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" eval="action" method="POST" id="shop_category_add_form">
		<label>
			<span><_text constant="label_category_parent" module="shop"/></span>
			<_if condition="!is_null($params['parent'])">
				<input type="hidden" name="parent" value="fix_id($_REQUEST['parent'])" eval="value"/>
				<_category
					id="$params['parent']"
					eval="id"
					template="category_readonly_input.xml"
					local="1"
				/>
			</_if>
			<_if condition="is_null($params['parent'])">
				<input type="hidden" name="parent" value="0"/>
				<input
					type="text"
					name="parent_display"
					value="shop::getInstance()->getLanguageConstant('no_parent_category')"
					eval="value"
					readonly="readonly"
					style="width: 375px;"
				/>
			</_if>
		</label>
		<label>
			<span><_text constant="label_title" module="shop"/></span>
			<input type="text" name="title" class="multi-language" style="width: 375px;" maxlength="255"/>
		</label>
		<label>
			<span><_text constant="label_description" module="shop"/></span>
			<textarea name="description" class="multi-language" style="width: 375px; height: 170px;"/>
		</label>
		<_if condition="class_exists('gallery')">
			<label>
				<span><_text constant="label_category_image" module="shop"/></span>
				<select name="image" style="width: 300px;">
					<option></option>
					<_image_list
						eval="selected"
						template="image_option.xml"
						local="1"
					/>
				</select>
			</label>
		</_if>
		<div class="button_bar">
			<button type="submit"><_text constant="save"/></button>
			<button type="reset"><_text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
	<script type="text/javascript">
		new LanguageSelector('shop_category_add_form');

		// create toolbar
		toolbar_api
				.createToolbar('shop_category_add_form', '[name=description]:input')
				.addControl('common', 'markdown')
				.addControl('gallery', 'article_image')
				.addControl('downloads', 'link');
	</script>
</document>
