<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<div class="list_item">
		<span class="column" style="width: 360px;">
			<label>
				<input
					type="radio"
					name="'delivery_'.$params['method']"
					value="$params['id']"
					checked="$params['selected'] ? 'checked' : false"
					cms:eval="name,value"
					cms:optional="checked"
					/>
				<cms:var name="$params['value']"/>
			</label>
		</span>
	</div>
</document>
