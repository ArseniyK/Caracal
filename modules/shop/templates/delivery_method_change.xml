<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" eval="action" method="POST" id="shop_delivery_method_change_form">
		<label>
			<input type="hidden" name="id" value="$params['id']" eval="value"/>
			<span><_text constant="label_name" module="shop"/></span>
			<input class="multi-language" type="text" name="name" style="width: 270px;" maxlength="50"/>
			<_language_data param="name"/>
		</label>
		<label class="checkbox">
			<span><_text constant="label_international" module="shop"/></span>
			<_if condition="$params['international'] == 1">
				<input type="checkbox" name="international" checked="checked"/>
			</_if>
			<_if condition="$params['international'] == 0">
				<input type="checkbox" name="international"/>
			</_if>
		</label>
		<label class="checkbox">
			<span><_text constant="label_domestic" module="shop"/></span>
			<_if condition="$params['domestic'] == 1">
				<input type="checkbox" name="domestic" checked="checked"/>
			</_if>
			<_if condition="$params['domestic'] == 0">
				<input type="checkbox" name="domestic"/>
			</_if>
		</label>
		<div class="button_bar">
			<button type="submit"><_text constant="save"/></button>
			<button type="reset"><_text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" eval="onclick">
				<_text constant="cancel"/>
			</button>
		</div>
	</form>
	<script type="text/javascript">
		var selector = new LanguageSelector('shop_delivery_method_change_form');
	</script>
</document>
