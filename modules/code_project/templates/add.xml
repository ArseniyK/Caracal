<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" cms:eval="action" method="POST">
		<label>
			<span><cms:text constant="label_code" module="code_project"/></span>
			<input type="text" name="code" style="width: 270px;" maxlength="50"/>
		</label>
		<label>
			<span><cms:text constant="label_url" module="code_project"/></span>
			<input type="text" name="url" style="width: 340px;" maxlength="255"/>
		</label>
		<div class="button_bar">
			<button type="submit"><cms:text constant="save"/></button>
			<button type="reset"><cms:text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" cms:eval="onclick">
				<cms:text constant="cancel"/>
			</button>
		</div>
	</form>
</document>
